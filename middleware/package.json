{
	"name": "ssi-auth-middleware",
	"version": "0.1.0",
	"description": "Authorization middleware that provides an OAuth authorization server driven by Verifiable Credentials.",
	"author": "Felix Hoops",
	"repository": "flhps/ssi-auth-middleware",
	"license": "MIT",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsc && tsup",
		"start:dev": "node --import=tsx --watch src/index.ts",
		"start:prod": "node dist/index.js",
		"check": "biome check --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.4",
		"@ory/hydra-client": "^2.2.0",
		"@spruceid/didkit-wasm-node": "^0.2.1",
		"cors": "2.8.5",
		"dcql": "^1.0.1",
		"dotenv": "17.2.1",
		"express": "5.1.0",
		"express-rate-limit": "8.0.1",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"jose": "^6.1.0",
		"pino": "9.9.0",
		"pino-http": "10.5.0",
		"pino-pretty": "13.1.1",
		"pug": "^3.0.3",
		"qrcode": "^1.5.4",
		"redis": "^5.9.0",
		"swagger-ui-express": "5.0.1",
		"zod": "3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@sphereon/pex": "5.0.0-unstable.28",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.3",
		"@types/qrcode": "^1.5.6",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"@vitest/coverage-v8": "3.2.4",
		"supertest": "7.1.4",
		"tsup": "8.5.0",
		"tsx": "4.20.4",
		"typescript": "5.9.2",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm",
			"cjs"
		],
		"target": "es2020",
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": false,
		"skipNodeModulesBundle": true
	},
	"packageManager": "pnpm@10.14.0",
	"scarfSettings": {
		"enabled": false
	}
}
